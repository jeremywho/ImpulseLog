{
  "name": "@impulse-log/electron",
  "version": "1.0.0",
  "description": "ImpulseLog desktop app - ADHD impulse tracking made simple",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:ci": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.9",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.2",
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.7.2",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.impulse.log",
    "productName": "ImpulseLog",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "starter-templates"
    }
  }
}
